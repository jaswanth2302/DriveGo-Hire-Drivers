# ==========================================
# DRIVO APP ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your values

# ===================
# SUPABASE CONFIGURATION (Required)
# ===================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# ===================
# MAP PROVIDER CONFIGURATION
# ===================
# Options: mock | osrm | google
MAP_PROVIDER=osrm

# Google Maps API Key (required when MAP_PROVIDER=google)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Maps Feature Flags
MAPS_AUTOCOMPLETE_ENABLED=false
MAPS_DIRECTIONS_ENABLED=true
MAPS_DISTANCE_MATRIX_ENABLED=true

# ===================
# CACHE SETTINGS
# ===================
CACHE_EXPIRATION_MINUTES=30
MAX_CACHE_ENTRIES=1000

# ===================
# DEFAULT SPEEDS
# ===================
DEFAULT_CITY_SPEED_KMH=25
DEFAULT_HIGHWAY_SPEED_KMH=60

# ===================
# DEBUG MODE
# ===================
DEBUG_MODE=false
